# EditorConfig: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{sql,html,css}]
indent_style = space
indent_size = 2
