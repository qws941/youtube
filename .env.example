# ===========================================
# YouTube Automation - Environment Variables
# ===========================================
# Copy this to .env and fill in your values

# ============== LLM APIs ==============
ANTHROPIC_API_KEY=sk-ant-api03-xxx
OPENAI_API_KEY=sk-xxx

# ============== TTS ==============
ELEVENLABS_API_KEY=xxx
# Voice IDs for each channel
ELEVENLABS_VOICE_HORROR=xxx
ELEVENLABS_VOICE_FACTS=xxx
ELEVENLABS_VOICE_FINANCE=xxx

# ============== Image Generation ==============
REPLICATE_API_TOKEN=r8_xxx
# Optional: If using DALL-E, uses OPENAI_API_KEY
# Optional: Midjourney via third-party
MIDJOURNEY_API_KEY=xxx

# ============== Video Generation ==============
RUNWAY_API_KEY=xxx

# ============== Music Generation ==============
SUNO_API_KEY=xxx

# ============== YouTube API ==============
# OAuth 2.0 credentials (downloaded from Google Cloud Console)
YOUTUBE_CLIENT_SECRETS_FILE=config/client_secrets.json
# Token storage path
YOUTUBE_TOKEN_FILE=config/youtube_token.json

# Channel IDs (will be set after OAuth)
YOUTUBE_CHANNEL_HORROR=UCxxx
YOUTUBE_CHANNEL_FACTS=UCxxx
YOUTUBE_CHANNEL_FINANCE=UCxxx

# ============== Storage ==============
OUTPUT_DIR=data/output
ASSETS_DIR=data/assets
TEMPLATES_DIR=data/templates

# ============== Scheduling ==============
# Cron expression for each channel
SCHEDULE_HORROR="0 18 * * 1,3,5"  # Mon, Wed, Fri 6PM
SCHEDULE_FACTS="0 18 * * 2,4,6"   # Tue, Thu, Sat 6PM
SCHEDULE_FINANCE="0 9 * * *"       # Daily 9AM

# ============== Features ==============
# Enable/disable specific features
ENABLE_THUMBNAIL_AB_TEST=true
ENABLE_MULTILANG=false
DRY_RUN=false

# ============== Logging ==============
LOG_LEVEL=INFO
LOG_FORMAT=json
